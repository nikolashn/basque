i64 Div(i64 n, i64 d, i64* r = 0) {
	if !d {
		"Error: division by zero\n";
		exit -1;
	}
	if r {
		[r] = n % d;
	}
	return n // d;
}

i64 a = 51;
i64 b = 7;
i64 rem = 0;
i64 c = Div(a, b, &rem);
write c; "\n";
write rem; "\n";

a = 100;
b = 3;
c = Div(a, b);
write c; "\n";
write rem; "\n";

b = 0;
c = Div(a, b);
write c; "\n";
write rem; "\n";
